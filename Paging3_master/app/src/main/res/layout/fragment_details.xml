<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.fragments.details.DetailsFragment">

    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        app:cardCornerRadius="@dimen/text_small_s4"
        app:cardElevation="@dimen/text_small_s4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/movie_poster"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:paddingEnd="@dimen/text_title_s16"
        android:paddingRight="@dimen/text_title_s16"
        android:paddingStart="@dimen/text_title_s16"
        android:paddingLeft="@dimen/text_title_s16"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/movie_title"
        android:text="Avengers Infinity War"
        android:padding="@dimen/text_small_s4"
        android:layout_marginTop="@dimen/text_small_s4"
        android:textColor="@color/off_black_title"
        android:textStyle="bold"
        android:textSize="@dimen/text_title_s16"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/movie_relaased_date"
        android:padding="@dimen/text_small_s4"
        android:layout_marginTop="@dimen/text_small_s4"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:text="Relased on 21/08/2020"
        android:textSize="@dimen/text_title_s14"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_marginTop="@dimen/text_small_s4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/popularity"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="normal"
                android:textSize="@dimen/text_small_s10"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/votes"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="normal"
                android:textSize="@dimen/text_small_s10"
                android:gravity="right|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </RelativeLayout>


    <TextView
        android:layout_marginTop="@dimen/text_small_s8"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_subtitle_s12"
        android:gravity="left|center"
        android:text="OverView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/movie_over_view"
            android:layout_marginTop="@dimen/text_small_s4"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="@dimen/text_subtitle_s12"
            android:gravity="left|center"
            android:text="OverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="@dimen/text_subtitle_s12"
        android:textColor="@color/off_black_title"
        android:textStyle="normal"
        android:textSize="@dimen/text_title_s14"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>


    </androidx.core.widget.NestedScrollView>

</layout>